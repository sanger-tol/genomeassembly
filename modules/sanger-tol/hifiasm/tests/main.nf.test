    test("Undibacterium_unclassified - trio") {

        setup {

            nfcoreInitialise("${launchDir}/library/")
            nfcoreInstall("${launchDir}/library/", ["yak/count"])
            nfcoreLink("${launchDir}/library/", "${baseDir}/modules/")

            run("YAK_COUNT", alias: "YAK_COUNT_1") {
                script "../../../nf-core/yak/count/main.nf"
                process {
                    """
                    input[0] = Channel.of([
                        [ id: "test1" ],
                        file(params.modules_testdata_base_path + 'Undibacterium_unclassified/genomic_data/baUndUnlc1/10x/baUndUnlc1_S12_L002_R1_001.fastq.gz', checkIfExists: true)
                    ])
                    """
                }
            }

            run("YAK_COUNT", alias: "YAK_COUNT_2") {
                script "../../../nf-core/yak/count/main.nf"
                process {
                    """
                    input[0] = Channel.of([
                        [ id: "test2" ],
                        file(params.modules_testdata_base_path + 'Undibacterium_unclassified/genomic_data/baUndUnlc1/10x/baUndUnlc1_S12_L002_R2_001.fastq.gz', checkIfExists: true)
                    ])
                    """
                }
            }
        }

        when {

            params {
                hifiasm_args = ""
            }

            process {
                """
                input[0] = [
                    [ id : 'test'],
                    file(params.modules_testdata_base_path + 'Undibacterium_unclassified/genomic_data/baUndUnlc1/pacbio/fasta/HiFi.reads.fasta', checkIfExists: true),
                    []
                ]
                input[1] = [
                    [:],
                    []
                ]
                input[2] = YAK_COUNT_1.out.yak.combine(YAK_COUNT_2.out.yak).map { meta, yak, meta2, yak2 -> [meta, yak, yak2] }
                input[3] = [
                    [:],
                    []
                ]
                """
            }
        }

        then {

            def bin_files = process.out.bin_files.get(0).get(1).collect { bin -> file(bin).name }
            def expected_bin_files = [
                "test.ec.bin",
                "test.ovlp.reverse.bin",
                "test.ovlp.source.bin",
                "test.hap1.phase.bin",
                "test.hap2.phase.bin"
            ]

            assertAll(
                { assert process.success },
                { assertContainsInAnyOrder(bin_files, expected_bin_files) },
                { assert file(process.out.log.get(0).get(1)).exists() },
                { assert snapshot(
                    process.out.assembly_graphs,
                    process.out.assembly_fasta,
                    process.out.corrected_reads,
                    process.out.read_overlaps,
                    process.out.bed.get(0).get(1).collect { bed -> file(bed).getName() },
                    process.out.versions
                ).match() }
            )
        }

        cleanup {
            nfcoreUnlink("${launchDir}/library/", "${baseDir}/modules/")
        }

    }

