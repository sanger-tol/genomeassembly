
nextflow_process {

    name "Test Process BEDTOOLS_BAMTOBEDSORT"
    script "../main.nf"
    process "BEDTOOLS_BAMTOBEDSORT"

    tag "modules"
    tag "modules_sangertol"
    tag "bedtools"
    tag "bedtools/bamtobedsort"

    config './nextflow.config'

    test("Undibacterium unclassified - bam") {

        when {

            params {
                samtools_view_args = "-u -F0x400"
                sort_args          = "-k4"
            }

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'Undibacterium_unclassified/analysis/hic_mapping/baUndUnlc1_hic_phased_hap2_merged.bam', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Undibacterium unclassified - bam - stub") {

        options "-stub"

        when {

            params {
                samtools_view_args = "-u"
                sort_args          = "-k4"
            }

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'Undibacterium_unclassified/analysis/hic_mapping/baUndUnlc1_hic_phased_hap2_merged.bam', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
