{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/sanger-tol/genomeassembly/master/assets/schema_input.json",
    "title": "sanger-tol/genomeassembly pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "assembly": {
                    "primary": {
                        "type": "string",
                        "pattern": "^\\S+\\.fa(sta)?(\\.gz)?$"
                    },
                    "haplotigs": { 
                        "type": "string",
                        "pattern": "^\\S+\\.fa(sta)?(\\.gz)?$"
                    }
                },
                "illumina_10X": {
                    "reads": {
                        "type": "string",
                        "pattern": "^\\S+$"
                    },
                    "kmer_pref": {
                        "type": "string",
                        "pattern": "^\\S+$"
                    }
                },
                "pacbio": {
                    "reads": {
                        "type": "string",
                        "pattern": "^\\S+\\.f(asta)?\\.gz$"
                    }
                },
                "HiC": {
                    "reads": {
                        "type": "string",
                        "pattern": "^\\S+\\.cram$"
                    },
                    "arima_motif": {
                        "type": "string",
                        "pattern": "^\\S+$"
                    },
                "busco":
                    "lineages_path": {
                        "type": "string",
                        "pattern": "^\\S+$"
                    },
                    "lineage": {
                        "type": "string",
                        "pattern": "^\\S+_odb\\S+$"
                    }
            }
        },
        "required": ["sample","pacbio"]
    }
}
