/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    sanger-tol/genomeassembly Nextflow base config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    A 'blank slate' config file, appropriate for general use on most high performance
    compute environments. Assumes that all software is installed and available on
    the PATH. Runs in `local` mode - all jobs will be run on the logged in environment.
----------------------------------------------------------------------------------------
*/

process {

    cpus   = { 1      * task.attempt }
    memory = { 6.GB   * task.attempt }
    time   = { 4.h    * task.attempt }

    errorStrategy = { task.exitStatus in ((130..145) + 104 + 175) ? 'retry' : 'finish' }
    maxRetries    = 5
    maxErrors     = '-1'

    // Process-specific resource requirements
    // NOTE - Please try and reuse the labels below as much as possible.
    //        These labels are used and recognised by default in DSL2 files hosted on nf-core/modules.
    //        If possible, it would be nice to keep the same label naming convention when
    //        adding in your local modules too.
    withLabel:process_single {
        cpus   = { 1                   }
        memory = { 6.GB * task.attempt }
        time   = { 4.h  * task.attempt }
    }
    withLabel:process_low {
        cpus   = { 2     * task.attempt }
        memory = { 12.GB * task.attempt }
        time   = { 4.h   * task.attempt }
    }
    withLabel:process_medium {
        cpus   = { 6     * task.attempt }
        memory = { 36.GB * task.attempt }
        time   = { 8.h   * task.attempt }
    }
    withLabel:process_high {
        cpus   = { 12    * task.attempt }
        memory = { 72.GB * task.attempt }
        time   = { 16.h  * task.attempt }
    }
    withLabel:process_long {
        time   = { 20.h  * task.attempt }
    }
    withLabel:process_high_memory {
        memory = { 200.GB * task.attempt }
    }
    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }
    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 2
    }
    withLabel: process_gpu {
        ext.use_gpu = { workflow.profile.contains('gpu') }
        accelerator = { workflow.profile.contains('gpu') ? 1 : null }
    }

    withName: '.*:GENOME_STATISTICS:BUSCO_BUSCO' {
        cpus   = { 16    * task.attempt }
        memory = { 80.GB * task.attempt }
        time   = { 20.h  * task.attempt }
    }

    withName: '.*:KMERS:MERQURYFK_HAPMAKER' {
        cpus   = { 20        * 1           }
        memory = { 50.GB    * task.attempt }
    }

    withName: '.*:KMERS:YAK_COUNT' {
        cpus   = 20
        memory = { 100.GB    * task.attempt }
    }

    withName:'.*:ORGANELLE_ASSEMBLY:MITOHIFI_MITOHIFI.*' {
        cpus   = { 16     * task.attempt  }
        memory = { 100.GB * task.attempt  }
        time   = { 48.h   * task.attempt  }
    }

    withName:'.*:ORGANELLE_ASSEMBLY:OATK' {
        cpus   = { 16     * task.attempt }
        memory = { 100.GB * task.attempt }
        time   = { 48.h   * task.attempt }
    }

    withName: '.*:PURGING:MINIMAP2_ALIGN_ASSEMBLY' {
        cpus   = 20
        memory = {
            def multiplier = reference.size() < 2e9 ? 30 :
                (reference.size() < 5e9 ? 50 :
                (reference.size() < 10e9 ? 60 :
                Math.ceil((reference.size() / 1e9) * 3)))

            return 1.GB * multiplier * task.attempt
        }
        time   = { 1.h  * (reference.size() < 1e9 ? 10 : reference.size() < 10e9 ? 30 : 48) }
    }

    withName: '.*:PURGING:PURGEDUPS_PURGEDUPS' {
        cpus   = { 16     * task.attempt }
        memory = { 100.GB * task.attempt }
        time   = { 16.h   * task.attempt }
    }

    withName:'.*:RAW_ASSEMBLY:HIFIASM.*' {
        cpus   = { 32     * task.attempt }
        memory = { 400.GB * task.attempt }
        time   = { 168.h  * task.attempt }
    }

    withName: '.*:SCAFFOLDING:HIC_MAPPING:BWAMEM2_INDEX' {
        memory  = { 1.GB * Math.ceil(28 * fasta.size() / 1e+9) * task.attempt }
    }

    withName: '.*:SCAFFOLDING:HIC_MAPPING:CRAMALIGN_BWAMEM2ALIGNHIC' {
        cpus    = 16
        memory  = {
            def multiplier = reference.size() < 2e9 ? 80 :
                Math.ceil((reference.size() / 1e+9) * 30)

            return 1.Gb * multiplier * task.attempt
        }
        time    = { 12.h * task.attempt }
    }

    withName: '.*:SCAFFOLDING:HIC_MAPPING:CRAMALIGN_MINIMAP2ALIGNHIC' {
        cpus   = 16
        memory = {
            def multiplier = reference.size() < 2e9 ? 30 :
                (reference.size() < 5e9 ? 50 :
                (reference.size() < 10e9 ? 60 :
                Math.ceil((reference.size() / 1e9) * 3)))

            return 1.GB * multiplier * task.attempt
        }
        time   = { 12.h * task.attempt }
    }

    withName: '.*:SCAFFOLDING:HIC_MAPPING:MINIMAP2_INDEX' {
        cpus   = { 2    * task.attempt                                      }
        memory = { 1.GB * Math.ceil(4 * fasta.size() / 1e+9) * task.attempt }
    }

    withName: '.*:SCAFFOLDING:HIC_MAPPING:SAMTOOLS_MARKDUP' {
        cpus   = 12
        memory = { 1.GB  * Math.ceil((input.size() / 1e+9) / 4) * task.attempt }
    }

    withName: '.*:SCAFFOLDING:HIC_MAPPING:SAMTOOLS_MERGE' {
        cpus   = 16
        memory = { 50.GB * task.attempt }
        time   = { 30.h  * task.attempt }
    }

    withName: ".*:SCAFFOLDING:SCAFFOLDING_YAHS:BAMTOBED_SORT" {
        cpus   = 12
        memory = {
            (bam.size() < 100e9 ? 60.GB :  // If <100GB -> 60GB fixed
            // If 100-150GB -> 50GB + (BAM/4GB)
            // If >150GB -> BAM/4GB
                (bam.size() <= 150e9 ?
                    50.GB + (1.GB * Math.ceil(bam.size() / 4e9)) :
                    1.GB * Math.ceil(bam.size() / 4e9)
                )
            ) * task.attempt
        }
        time   = { 30.h * task.attempt }
    }

    withName: ".*:SCAFFOLDING:SCAFFOLDING_YAHS:JUICERTOOLS_PRE" {
        // Error code 1 on OOM
        errorStrategy = { task.exitStrategy in ((130..145) + 104 + 175 + 1) ? "retry" : "ignore" }
        cpus          = { 20     * task.attempt }
        memory        = { 100.GB * task.attempt }
    }

    withName: ".*:SCAFFOLDING:SCAFFOLDING_YAHS:YAHS_MAKEPAIRSFILE" {
        cpus   = 12
        memory = { 80.Gb * task.attempt }
        time   = { 30.h * task.attempt  }
    }
}
