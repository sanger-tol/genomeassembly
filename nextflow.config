    name            = 'sanger-tol/genomeassembly'
    author          = """Ksenia Krashennikova""" // The author field is deprecated from Nextflow version 24.10.0, use contributors instead
    contributors    = [
        [
            name: 'Ksenia Krashennikova',
            affiliation: 'Wellcome Sanger Institute',
            email: '',
            github: '@ksenia-krasheninnikova',
            contribution: ['author'], // List of contribution types ('author', 'maintainer' or 'contributor')
            orcid: ''
        ],
        [
            name: 'Jim Downie',
            affiliation: 'Wellcome Sanger Institute',
            email: '',
            github: '@prototaxites',
            contribution: ['author'], // List of contribution types ('author', 'maintainer' or 'contributor')
            orcid: ''
        ],
        [
            name: 'Yumi Sims',
            affiliation: 'Wellcome Sanger Institute',
            email: '',
            github: '@yumisims',
            contribution: ['contributor'], // List of contribution types ('author', 'maintainer' or 'contributor')
            orcid: ''
        ],
    ]
    homePage        = 'https://github.com/sanger-tol/genomeassembly'
    description     = """A bioinformatics best-practice analysis pipeline for genome assembly from PacBio CCS and HiC reads"""
    mainScript      = 'main.nf'
    defaultBranch   = 'master'
    nextflowVersion = '!>=24.10.6'
    version         = '0.10.1dev'
    doi             = ''
}

// Nextflow plugins
plugins {
    id 'nf-schema@2.4.2' // Validation of pipeline parameters and creation of an input channel from a sample sheet
}

